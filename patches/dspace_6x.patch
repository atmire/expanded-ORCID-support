+        <xsl:variable name="externalMetadataURL">
+            <xsl:text>cocoon:/</xsl:text>
+            <xsl:value-of select="@url"/>
+            <!-- If this is an Item, display the METSRIGHTS section, so we
+                 know which files have access restrictions.
