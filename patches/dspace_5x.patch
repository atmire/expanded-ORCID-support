+            </xsl:when>
+
+            <xsl:when test="$clause = 7 and $ds_item_view_toggle_url != ''">
+                <p class="ds-paragraph item-view-toggle item-view-toggle-bottom">
+                    <a>
+                        <xsl:attribute name="href"><xsl:value-of select="$ds_item_view_toggle_url"/></xsl:attribute>
